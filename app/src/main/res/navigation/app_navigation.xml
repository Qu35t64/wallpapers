<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/app_navigation"
    app:startDestination="@id/wallpaperFragment">


    <fragment
        android:id="@+id/wallpaperFragment"
        android:name="com.ondev.wallpaper.fragments.WallpaperFragment"
        android:label="WallpaperFragment" >
        <action
            android:id="@+id/action_wallpaperFragment_to_about"
            app:destination="@id/about"
            app:enterAnim="@anim/viewpage_transition_in"
            app:exitAnim="@anim/viewpage_transition_out" />
        <action
            android:id="@+id/action_wallpaperFragment_to_searchWallpaperFragment"
            app:destination="@id/searchWallpaperFragment"
            app:enterAnim="@anim/viewpage_transition_in"
            app:exitAnim="@anim/viewpage_transition_out" />
    </fragment>
    <fragment
        android:id="@+id/about"
        android:name="com.ondev.wallpaper.fragments.AboutFragment"
        android:label="About" >
        <action
            android:id="@+id/action_about_to_wallpaperFragment"
            app:destination="@id/wallpaperFragment"
            app:enterAnim="@anim/viewpage_transition_in"
            app:exitAnim="@anim/viewpage_transition_out" />
    </fragment>
    <fragment
        android:id="@+id/searchWallpaperFragment"
        android:name="com.ondev.wallpaper.fragments.SearchWallpaperFragment"
        android:label="fragment_search_wallpaper"
        tools:layout="@layout/fragment_search_wallpaper" >
        <action
            android:id="@+id/action_searchWallpaperFragment_to_wallpaperFragment"
            app:destination="@id/wallpaperFragment"
            app:enterAnim="@anim/viewpage_transition_back_in"
            app:exitAnim="@anim/viewpage_transition_back_out" />
    </fragment>
</navigation>